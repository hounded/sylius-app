{
    "name": "symplify/easy-coding-standard",
    "description": "Use Coding Standard with 0-knowledge of PHP-CS-Fixer and PHP_CodeSniffer.",
    "license": "MIT",
    "bin": [
        "bin/easy-coding-standard",
        "bin/ecs",
        "bin/easy-coding-standard.php"
    ],
    "require": {
        "php": "^7.1",
        "sebastian/diff": "^1.4|^2.0",
        "symfony/console": "^3.3",
        "symfony/config": "^3.3",
        "symfony/http-kernel": "^3.3",
        "symfony/dependency-injection": "^3.3",
        "symfony/finder": "^3.3",
        "symfony/yaml": "^3.3",
        "nette/caching": "^2.4|^3.0",
        "nette/utils": "^2.4|^3.0",
        "nette/neon": "^2.4|^3.0",
        "nette/robot-loader": "^2.4|^3.0.1",

        "symplify/package-builder": "^2.3",
        "symplify/coding-standard": "^2.3",
        "slevomat/coding-standard": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.6",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\": "src",
            "Symplify\\EasyCodingStandard\\CheckerSetExtractor\\": "packages/CheckerSetExtractor/src",
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\": "packages/ChangedFilesDetector/src",
            "Symplify\\EasyCodingStandard\\Configuration\\": "packages/Configuration/src",
            "Symplify\\EasyCodingStandard\\FixerRunner\\": "packages/FixerRunner/src",
            "Symplify\\EasyCodingStandard\\SniffRunner\\": "packages/SniffRunner/src",
            "Symplify\\EasyCodingStandard\\Performance\\": "packages/Performance/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\Tests\\": "packages/ChangedFilesDetector/tests",
            "Symplify\\EasyCodingStandard\\CheckerSetExtractor\\Tests\\": "packages/CheckerSetExtractor/tests",
            "Symplify\\EasyCodingStandard\\Configuration\\Tests\\": "packages/Configuration/tests",
            "Symplify\\EasyCodingStandard\\FixerRunner\\Tests\\": "packages/FixerRunner/tests",
            "Symplify\\EasyCodingStandard\\SniffRunner\\Tests\\": "packages/SniffRunner/tests",
            "Symplify\\EasyCodingStandard\\Tests\\": "tests"
        }
    }
}
